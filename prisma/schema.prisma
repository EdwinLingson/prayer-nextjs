generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Prayer {
  id String @id @db.VarChar(30)

  intercededFor String @db.VarChar(500) @map("interceded_for")
  goodWork      String @db.VarChar(500) @map("good_work")
  badWork       String @db.VarChar(500) @map("bad_work")
  goodSpirit    String @db.VarChar(500) @map("good_spirit")
  badSpirit     String @db.VarChar(500) @map("bad_spirit")
  goodFam       String @db.VarChar(500) @map("good_fam")
  badFam        String @db.VarChar(500) @map("bad_fam")

  rosary             Boolean  @default(false)
  lectioDivina       Boolean  @default(false)
  lectioDivinaNotes  String?
  adoration          Boolean  @default(false)
  adorationHours     Float?

  createdAt DateTime @default(now())

  @@map("prayer")
}
